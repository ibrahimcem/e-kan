<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aandroid="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tamam"
    aandroid:ignore="MissingDefaultResource">

    <EditText
        android:id="@+id/bloodPatientName"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="3dp"
        android:textColorHint="#808080"
        android:textColor="@color/white"
        android:background="@drawable/edittext"
        android:drawableStart="@drawable/patientcard"
        android:drawableTint="@color/white"
        android:ems="10"
        android:hint="Hasta Adı"
        android:inputType="textPersonName"
        android:maxLength="22"
        aandroid:targetApi="p"
        app:layout_constraintBottom_toTopOf="@+id/bloodPatientContactNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/bloodPatientHospital"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:textColorHint="#808080"
        android:textColor="@color/white"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/edittext"
        android:drawableStart="@drawable/hospital"
        android:drawableTint="@color/white"
        android:ems="10"
        android:hint="Hastane Adı"
        android:maxLength="17"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/bloodPatientCity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bloodPatientContactNumber" />

    <EditText
        android:id="@+id/bloodPatientContactNumber"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="4dp"
        android:textColorHint="#808080"
        android:textColor="@color/white"
        android:background="@drawable/edittext"
        android:drawableStart="@drawable/phone2"
        android:drawableTint="@color/white"
        android:maxLength="11"
        android:ems="10"
        android:hint="İrtibat numarası"
        android:inputType="phone"
        app:layout_constraintBottom_toTopOf="@+id/bloodPatientHospital"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bloodPatientName" />

    <AutoCompleteTextView
        android:id="@+id/bloodPatientCity"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:textColorHint="#808080"
        android:textColor="@color/white"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/edittext"
        android:dropDownHeight="150dp"
        android:drawableStart="@drawable/location"
        android:drawableEnd="@drawable/downarrow"
        android:drawableTint="@color/white"
        android:hint="Şehir Seçiniz..."
        android:popupBackground="@color/ok"
        app:layout_constraintBottom_toTopOf="@+id/bloodPatientBlood"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bloodPatientHospital" />

    <AutoCompleteTextView
        android:id="@+id/bloodPatientBlood"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:textColorHint="#808080"
        android:textColor="@color/white"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/edittext"
        android:drawableStart="@drawable/blooddrop"
        android:drawableTint="@color/white"
        android:drawableEnd="@drawable/downarrow"
        android:hint="Kan Grubu"
        android:popupBackground="@color/ok"
        app:layout_constraintBottom_toTopOf="@+id/bloodPatientType"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bloodPatientCity" />

    <AutoCompleteTextView
        android:id="@+id/bloodPatientType"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:textColorHint="#808080"
        android:textColor="@color/white"
        android:background="@drawable/edittext"
        android:drawableStart="@drawable/donate"
        android:drawableEnd="@drawable/downarrow"
        android:drawableTint="@color/white"
        android:hint="Nakil Türü"
        android:popupBackground="@color/ok"
        app:layout_constraintBottom_toTopOf="@+id/bloodSearch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bloodPatientBlood" />

    <Button
        android:id="@+id/bloodSearch"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/buton"
        android:text="Aramayı Başlat"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bloodPatientType" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="14dp"
        android:gravity="center"
        android:text="Kan mı arıyorsun?"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/bloodPatientName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>