<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/example_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/ok"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/txtDateOfBirth"
            app:layout_constraintEnd_toEndOf="@+id/txtDateOfSearch3"
            app:layout_constraintStart_toEndOf="@+id/txtDateOfSearch3"
            app:layout_constraintTop_toBottomOf="@+id/txtDateOfBirth">

            <TextView
                android:id="@+id/txtNameSurname3"
                android:layout_width="0dp"
                android:layout_height="33dp"
                android:layout_marginStart="2dp"
                android:text="Çağrı Aldemir"
                android:textColor="#ed9121"
                android:textSize="24sp"
                app:layout_constraintEnd_toStartOf="@+id/txtAge"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:text="18"
                android:textColor="#ed9121"
                android:textSize="36sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtNameSurname3"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtDateOfSearch3"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:text="31.08.1995"
                android:textColor="#add8e6"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/txtCity3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtHospital3" />

            <TextView
                android:id="@+id/txtHospital3"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:text="Doğum Tarihi"
                android:textColor="#add8e6"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/txtDiseases"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtContactNumber3" />

            <TextView
                android:id="@+id/txtCity3"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_marginEnd="2dp"
                android:gravity="end"
                android:text="TextView"
                android:textColor="#add8e6"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtDateOfSearch3"
                app:layout_constraintTop_toBottomOf="@+id/txtHospital3" />

            <TextView
                android:id="@+id/txtDiseases"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginEnd="2dp"
                android:gravity="end"
                android:text="TextView"
                android:textColor="#add8e6"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtHospital3"
                app:layout_constraintTop_toBottomOf="@+id/callButton3" />

            <TextView
                android:id="@+id/txtContactNumber3"
                android:layout_width="175dp"
                android:layout_height="35dp"
                android:layout_marginStart="2dp"
                android:text="05999999999"
                android:textColor="#add8e6"
                android:textSize="24sp"
                app:layout_constraintEnd_toStartOf="@+id/callButton3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtNameSurname3" />

            <Button
                android:id="@+id/callButton3"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:background="@null"
                android:backgroundTint="@null"
                android:drawableLeft="@drawable/call"
                android:gravity="start"
                android:text="Ara"
                android:textColor="#add8e6"
                app:itemIconSize="30dp"
                android:drawableTint="#add8e6"
                app:layout_constraintEnd_toStartOf="@+id/txtAge"
                app:layout_constraintStart_toEndOf="@+id/txtContactNumber3"
                app:layout_constraintTop_toBottomOf="@+id/txtNameSurname3"
                app:maxImageSize="30dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</androidx.appcompat.widget.LinearLayoutCompat>